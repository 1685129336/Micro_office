<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.bawei.team.viewmodel.AddMemberInfoViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10">
        <TextView
            android:id="@+id/addteamtwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加团队成员"
            android:textColor="#000"
            android:textSize="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textColor="#0099FF"
            android:textSize="@dimen/dp_20"
            android:layout_alignParentRight="true"
            />
        <Spinner
            android:id="@+id/team_spinner"
            android:layout_below="@+id/addteamtwo"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:entries="@array/number"
            android:layout_marginTop="@dimen/dp_40"
            />
        <View
            android:id="@+id/team_view"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#B1ADAD"
            android:layout_toRightOf="@+id/team_spinner"
            android:layout_below="@+id/addteamtwo"
            android:layout_marginTop="45dp"
            />
        <EditText
            android:id="@+id/team_et_number"
            android:layout_toRightOf="@+id/team_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/addteamtwo"
            android:layout_marginTop="@dimen/dp_40"
            android:background="#fff"
            android:hint="请输入成员手机号"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_20"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1ADAD"
            android:layout_below="@+id/team_spinner"
            android:layout_marginTop="@dimen/dp_10"

            />
        <EditText
            android:id="@+id/team_et_numname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/team_spinner"
            android:layout_marginTop="@dimen/dp_40"
            android:background="#fff"
            android:hint="请输入成员手机号"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_20"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1ADAD"
            android:layout_below="@+id/team_et_numname"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/from_contatis"
            android:layout_below="@+id/team_et_numname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:drawableLeft="@drawable/ic_baseline_group_24"
            android:text="从通讯录邀请"
            android:layout_marginTop="30dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/team_btn_addnumber"
            android:layout_below="@+id/from_contatis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/team_btn_back"
            android:text="添加成员"
            android:textColor="#fff"
            android:textSize="@dimen/dp_30" />
        <RelativeLayout
            android:layout_above="@+id/addteamtwo_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="其他方式邀请"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <View
                android:layout_toLeftOf="@+id/other"
                android:layout_width="@dimen/dp_60"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                />
            <View
                android:layout_toRightOf="@+id/other"
                android:layout_width="@dimen/dp_60"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/addteamtwo_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_id"
                android:text="从通讯录邀请"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#B1ADAD"
                android:layout_toRightOf="@+id/team_spinner"
                android:layout_below="@+id/addteamtwo"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_twocode"
                android:text="从通讯录邀请"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#B1ADAD"
                android:layout_toRightOf="@+id/team_spinner"
                android:layout_below="@+id/addteamtwo"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_cloud"
                android:text="从通讯录邀请"

                />
        </LinearLayout>
    </RelativeLayout>
</layout>