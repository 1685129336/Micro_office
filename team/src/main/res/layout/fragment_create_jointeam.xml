<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.bawei.team.viewmodel.CreateJoinTeamViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/createjoin_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <LinearLayout
            android:id="@+id/createjoin_text_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createjoin_return"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎使用微办公"
                android:textColor="#000"
                android:textSize="@dimen/dp_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如果需要在微办公协作，请直接选择创建或者加入团队"
                android:textColor="#9A9999"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/jointeam_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createjoin_text_ll"
            android:layout_marginTop="50dp"
            android:background="@drawable/createjoin__line_black"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/jointeam_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入"
                android:textColor="#FFC107"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jointeam_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/jointeam_join"
                android:text="团队"
                android:textColor="#000"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jointeam_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jointeam_join"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toLeftOf="@+id/jointeam_to"
                android:text="如您需要团队协作，或者朋友同事已经在用请选择此项"
                android:textColor="#9A9999"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:id="@+id/jointeam_to"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_chevron_right_24" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/createteam_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jointeam_rl"
            android:layout_marginTop="20dp"
            android:background="@drawable/createjoin__line_black"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/createteam_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建"
                android:textColor="#4CAF50"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createteam_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/createteam_create"
                android:text="团队"
                android:textColor="#000"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/createteam_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createteam_create"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toLeftOf="@+id/createteam_to"
                android:text="如您需要团队协作，或者朋友同事已经在用请选择此项"
                android:textColor="#9A9999"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:id="@+id/createteam_to"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_chevron_right_24" />
        </RelativeLayout>
    </RelativeLayout>
</layout>