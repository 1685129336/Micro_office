<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.home.viewmodel.HomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/info_blue"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/home_view_back" />

            <TextView
                android:id="@+id/home_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="张帆"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/home_img_somesetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_baseline_add_circle_outline_24" />

        <EditText
            android:id="@+id/home_ed_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/info_blue"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="20sp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/home_ed_back_gry"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:hint="搜索"
            android:textColor="#000000"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/info_purple"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/home_ed_search"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#E4E9FF">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/yaoqing" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/home_btn_back_blue"
                android:text="邀请"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/info_purple"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:overScrollMode="never"/>

        <View
            android:id="@+id/home_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90949494"
            android:visibility="gone" />


    </RelativeLayout>

</layout>