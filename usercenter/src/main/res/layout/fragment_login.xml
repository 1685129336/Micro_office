<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.bawei.usercenter.viewmodel.UserCenterViewModel" />
        <variable
            name="userNameTextChange"
            type="com.example.common.event.api.IEvent.OnTextChangedListener" />
        <variable
            name="passwordTextChange"
            type="com.example.common.event.api.IEvent.OnTextChangedListener" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="right|center_vertical"
            >
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language_spinner"
                android:entries="@array/language"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="@string/login_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/login_msg"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:id="@+id/username_layout"
           android:layout_marginTop="40dp"
           >
           <EditText
               android:id="@+id/username_et"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/login_username"
               my_onTextChange="@{userNameTextChange}"
               />
       </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/password_input_layout"
            >
            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_password"
                my_onTextChange="@{passwordTextChange}"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/login_auth_code"
            android:id="@+id/tv_auth_code_login"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/login_to_register"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_register"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/login_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:background="#4AA6EF"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/login_aaa"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>